<Window
    x:Class="AudioSplitter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:AudioSplitter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AudioSplitter.ViewModels"
    Title="{Binding Title}"
    Width="903"
    Height="450"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:MainWindowViewModelDesignTime}}"
    mc:Ignorable="d">
    <Window.Background>
        <SolidColorBrush Color="#00333333" />
    </Window.Background>
    <Grid Margin="2">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ice-age.png" TileMode="Tile" Viewport="0,0,400,400" ViewportUnits="Absolute" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="2,2,8,2"
            Style="{StaticResource TagKeyTextBlockStyle}"
            VerticalAlignment="Center"
            Text="Выбрать файл" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Height="36"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="18"
            IsReadOnly="True"
            Style="{StaticResource DefaultTextBoxStyle}"
            Text="{Binding SelectedSourceFile}" />
        <Button
            x:Name="btnSelectSourceFile"
            Grid.Row="0"
            Grid.Column="2"
            Margin="8,2,2,2"
            Command="{Binding SelectSourceFileCommand}"
            Style="{StaticResource IconButton}">
            <icons:PackIconModern Kind="FolderOpen" />
        </Button>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="2,2,8,2"
            Style="{StaticResource TagKeyTextBlockStyle}"
            VerticalAlignment="Center"
            Text="Количество частей" />
        <TextBox
            x:Name="txtChunksNumber"
            Grid.Row="1"
            Grid.Column="1"
            Width="40"
            Margin="0,4,2,2"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Style="{StaticResource DefaultTextBoxStyle}"
            Text="{Binding ChunksNumber}" />

        <!--  Список тэгов к заполнению, если будет больше можно вынести в отдельный список и заполнять через VM  -->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource TagKeyTextBlockStyle}"
                Text="Исполнитель" />
            <TextBox
                x:Name="txtAuthorTag"
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource DefaultTextBoxStyle}"
                Text="{Binding TagAuthorName}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource TagKeyTextBlockStyle}"
                Text="Альбом" />
            <TextBox
                x:Name="txtAlbumTag"
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource DefaultTextBoxStyle}"
                Text="{Binding TagAlbumName}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource TagKeyTextBlockStyle}"
                Text="Год релиза" />
            <TextBox
                x:Name="txtAlbumYear"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource DefaultTextBoxStyle}"
                Text="{Binding TagYearOfRelease}" />

        </Grid>

        <Button
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="12"
            Padding="20,10"
            HorizontalAlignment="Center"
            Background="Blue"
            BorderBrush="Blue"
            Command="{Binding CreateChunksCommand}"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White">
            Заполнить по шаблону
        </Button>

        <ItemsControl
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{Binding ChunkItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding InProgress, Converter={StaticResource ProgressPanelBackgroundColorConverter}}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!--  track number  -->
                            <ColumnDefinition Width="*" />
                            <!--  name  -->
                            <ColumnDefinition Width="Auto" />
                            <!--  start time  -->
                            <ColumnDefinition Width="Auto" />
                            <!--  end time  -->
                            <ColumnDefinition Width="Auto" />
                            <!--  duration readonly  -->
                            <ColumnDefinition Width="Auto" />
                            <!--  filesize readonly  -->
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Margin="4,8"
                            Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ChunkDisplayItemTitleStyle}" Text="Номер трека" />
                            <TextBox Style="{StaticResource ChunkDisplayItemValueStyle}" Text="{Binding TrackNumber}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            Margin="4,8"
                            Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ChunkDisplayItemTitleStyle}" Text="Имя файла" />
                            <TextBox Style="{StaticResource ChunkDisplayItemValueStyle}" Text="{Binding TrackName}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="2"
                            Margin="4,8"
                            Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ChunkDisplayItemTitleStyle}" Text="Начало" />
                            <TextBox Style="{StaticResource ChunkDisplayItemValueStyle}" Text="{Binding TimeStart}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="3"
                            Margin="4,8"
                            Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ChunkDisplayItemTitleStyle}" Text="Конец" />
                            <TextBox Style="{StaticResource ChunkDisplayItemValueStyle}" Text="{Binding TimeEnd}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="4"
                            Margin="4,8"
                            Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ChunkDisplayItemTitleStyle}" Text="Длительность отрезка" />
                            <TextBox
                                IsReadOnly="True"
                                Style="{StaticResource ChunkDisplayItemValueStyle}"
                                Text="{Binding Duration, Mode=OneWay}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="5"
                            Margin="4,8"
                            Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ChunkDisplayItemTitleStyle}" Text="Размер файла" />
                            <TextBox
                                IsReadOnly="True"
                                Style="{StaticResource ChunkDisplayItemValueStyle}"
                                Text="{Binding FileSize, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="12"
            Padding="20,10"
            HorizontalAlignment="Center"
            Background="LawnGreen"
            BorderBrush="LawnGreen"
            Command="{Binding UploadAllFilesCommand}"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White">
            Выгрузить файлы
        </Button>

    </Grid>
</Window>
