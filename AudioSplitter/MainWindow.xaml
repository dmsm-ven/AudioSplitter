<Window
    x:Class="AudioSplitter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:AudioSplitter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AudioSplitter.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:MainWindowViewModelDesignTime}}"
    mc:Ignorable="d">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="2,2,8,2"
            VerticalAlignment="Center"
            Text="Выбрать файл" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Height="36"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="18"
            IsReadOnly="True"
            Text="{Binding SelectedSourceFile}" />
        <Button
            x:Name="btnSelectSourceFile"
            Grid.Row="0"
            Grid.Column="2"
            Margin="8,2,2,2"
            Command="{Binding SelectSourceFileCommand}"
            Style="{StaticResource IconButton}">
            <icons:PackIconModern Kind="FolderOpen" />
        </Button>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="2,2,8,2"
            VerticalAlignment="Center"
            Text="Количество частей" />
        <TextBox
            x:Name="txtChunksNumber"
            Grid.Row="1"
            Grid.Column="1"
            Width="40"
            Margin="0,4,2,2"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Text="{Binding ChunksNumber}" />

        <!--  Список тэгов к заполнению, если будет больше можно вынести в отдельный список и заполнять через VM  -->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="12"
            Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource TagKeyTextBlockStyle}"
                Text="Исполнитель" />
            <TextBox
                x:Name="txtAuthorTag"
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource TagValueTextBoxStyle}"
                Text="{Binding TagAuthorName}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource TagKeyTextBlockStyle}"
                Text="Альбом" />
            <TextBox
                x:Name="txtAlbumTag"
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource TagValueTextBoxStyle}"
                Text="{Binding TagAlbumName}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource TagKeyTextBlockStyle}"
                Text="Год релиза" />
            <TextBox
                x:Name="txtAlbumYear"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource TagValueTextBoxStyle}"
                Text="{Binding TagYearOfRelease}" />

        </Grid>

        <Button
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="4"
            Padding="20,10"
            HorizontalAlignment="Center"
            Background="Blue"
            BorderBrush="Blue"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White"
            Command="{Binding CreateChunksCommand}"
            >
            Заполнить по шаблону
        </Button>
    </Grid>
</Window>
